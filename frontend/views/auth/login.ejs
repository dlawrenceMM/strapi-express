<% extends('layout.ejs') %>

<% block content %>
  <h1><%= title %></h1>

  <form action="/auth/login" method="post">
    <div>
      <input type="text" name="identifier" placeholder="Username or email">
    </div>
    <div>
      <input type="password" name="password" placeholder="Password">
    </div>
    <div>
      <button type="submit">Login</button>
    </div>
  </form>
<% endblock %>
